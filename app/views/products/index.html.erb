<section class="page-body container">

  <section class="header-images container">
    <div class="row">
      <div class="col-sm text-center">
        <div class="top-banner">
          <%= image_tag("market_banner.gif", :alt => "marketplace banner") %>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-sm text-center">
        <div class="top-banner">
          <%= image_tag("faerie_merchant.gif", :alt => "a faerie bookkeeper stacks books", :class => "rounded") %>
        </div>
        <br>
      </div>
    </div>
    <div class="row">
      <div class="col-sm text-center">
        <div class="text-center">
          <%= image_tag("products_title.png", :alt => "reads all products", :class => "w-50") %>
        </div>
      </div>
    </div>
  </section>

  <section class="display-products-container">
    <% if @login_user %>
      <%= render partial: 'product-grid', locals: { products: @products.where.not(merchant_id: @login_user.id, active: false) } %>
    <% elsif @products.nil? %>
      <br><br>
      <h4><i>Eep! No products have been added yet! Sad day.</i></h4>
    <% else %>
      <%= render partial: 'product-grid', locals: { products: @products.where(active: true) } %>
    <% end %>
  </section>

</section>
