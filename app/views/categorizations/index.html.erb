<section class="header-images container">
  <div class="row">
    <div class="col-sm text-center">
      <div class="top-banner">
        <%= image_tag("market_banner.gif", :alt => "marketplace banner") %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-sm text-center">
      <div class="top-banner">
        <%= image_tag("kauvara.gif", :alt => "kauvara looks over her potions", :class => "rounded") %>
      </div>
      <br>
    </div>
  </div>
    <div class="row">
      <div class="col-sm text-center">
        <div class="text-center">
          <%= image_tag("categories_title.png", :alt => "reads all categories", :class => "w-50") %>
        </div>
      </div>
    </div>
</section>

<section class="page-body container">
  <br>
  <section class="categorizations">
    <div class="row">
      <% if @categorizations.any? %>
          <% @categorizations.each do |category| %>
          <div class="col-sm text-center">
            <h3><%= link_to category.name, categorization_path(category.id), :class => "badge badge-secondary badge-pill even-larger-badge"%></h3>
          </div>
        <% end %>
      <% else %>
        <% if @login_user %>
          <h4><i>No categories have been added yet! Why not create one??</i></h4>
          <br><br>
          <%= button_to 'Make A Category', new_categorization_path, method: :get, class: "btn btn-primary" %>
        <% else %>
          <h4><i>Eep! No categories have been added yet! Sad day.</i></h4>
        <% end %>
      <% end %>
    </div>
  </section>
</section>

<br>